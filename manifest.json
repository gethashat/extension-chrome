{
  "manifest_version": 3,
  "name": "Hashat",
  "description": "Überprüfe mit Hashat, ob ein URL sicher ist.",
  "version": "1.0",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "assets/img/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "128": "assets/img/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ]
}